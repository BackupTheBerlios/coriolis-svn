<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC
  "-//Apache Software Foundation//Tapestry Specification 4.0//EN"
  "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="org.mikejones.coriolis.pages.NewPost">
    <description>
        Add a new post
    </description>
    
    <bean name="delegate" class="org.mikejones.coriolis.framework.validation.BlogDelegate"/>
    <bean name="required" class="org.apache.tapestry.valid.StringValidator" lifecycle="page">
        <set-property name="required" expression="true"/>
    </bean>
    
    <property-specification name="post" type="org.mikejones.coriolis.om.Post"/>
    <component id="inputTitle" type="ValidField">
        <static-binding name="displayName" value="Title"/>
        <binding name="validator" expression="beans.required"/>
        <binding name="value" expression="post.title"/>
    </component>
    <component id="inputText" type="TextArea">
        <binding name="value" expression="post.text"/>
    </component>
    <inject property="postManager" object="service:blog.PostManager"/>
</page-specification>
