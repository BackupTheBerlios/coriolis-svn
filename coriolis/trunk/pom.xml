  <dependencies>
    <!-- dependacies below taken from web and from compiled project-->
    <!-- 
			bsf-2.3.0.jar
			commons-codec-1.3.jar
			commons-fileupload-1.0.jar
			commons-logging-1.0.4.jar			
			hivemind-1.1-beta-3.jar
